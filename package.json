{
  "private": true,
  "name": "workflow-root",
  "version": "0.0.3",
  "workspaces": [
    "packages/*"
  ],
  "description": "Workflow-centric workspace manager",
  "scripts": {
    "start": "node cli.js",
    "eslint": "eslint .",
    "format:file": "prettier $(cat .prettier) --write ",
    "format": "npm run --silent format:file -- 'packages/**/*.[jt]s'",
    "check-format:file": "prettier $(cat .prettier) --list-different ",
    "check-format": "npm run --silent check-format:file -- 'packages/**/*.[jt]s'",
    "test": "jest",
    "watch": "jest --watch"
  },
  "babel": {
    "presets": [
      "flow",
      "react",
      [
        "env",
        {
          "modules": false,
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "env": {
      "test": {
        "presets": [
          "flow",
          "react",
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-object-rest-spread",
          "transform-class-properties"
        ]
      }
    }
  },
  "jest": {
    "testMatch": [
      "**/test/**/*_tests.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!workflow-.*|shared)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/havardh/workflow.git"
  },
  "keywords": [
    "wm",
    "i3",
    "osx",
    "windows"
  ],
  "author": "Håvard Wormdal Høiby <havardwhoiby@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/havardh/workflow/issues"
  },
  "homepage": "https://github.com/havardh/workflow#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "8.2.2",
    "chai": "^4.1.2",
    "eslint": "4.19.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "0.68.0",
    "jest-junit": "^3.4.1",
    "sinon": "^4.4.8",
    "sinon-chai": "^3.0.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "desktop-screenshot": "^0.1.1",
    "fs-extra": "^5.0.0",
    "jest": "^20.0.3",
    "jest-cli": "^20.0.3",
    "jest-image-snapshot": "2.4.2",
    "lodash": "^4.17.10",
    "lodash.flatmap": "^4.5.0",
    "prettier": "^1.13.5",
    "rollup": "^0.57.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "semver": "^5.5.0"
  }
}

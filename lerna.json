{
  "version": "independent",
  "npmClient": "yarn",
  "conventionalCommits": true,
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/test/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %s"
    }
  }
}
